<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MakersMarktApp.Pages.ProductsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MakersMarktApp.Pages"
    xmlns:localData="using:MakersMarktApp.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <ListView x:Name="ProductsListView" ItemsSource="{x:Bind ProductsList, Mode=OneWay}">
                <ListView.DataContext>
                    <DataTemplate x:DataType="localData:Product">
                        <StackPanel>
                            <TextBlock Text="{x:Bind Name}" x:Name="ProductNameTextBlock" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.DataContext>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
